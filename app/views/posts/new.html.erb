<h1>New Post create</h1>

<%= form_for :post, url: posts_path do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title, placeholder: "Title" %>
  </div>

  <div>
    <%= f.label :body %><br>
    <%= f.text_area :body, placeholder: "Post content" %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
